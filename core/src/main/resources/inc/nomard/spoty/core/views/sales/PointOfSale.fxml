<?import io.github.palexdev.materialfx.controls.MFXFilterComboBox?>
<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.materialfx.controls.legacy.MFXLegacyTableView?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inc.nomard.spoty.core.views.sales.pos.PointOfSaleController">
    <right>
        <VBox prefHeight="584.0" prefWidth="538.0" spacing="10.0" styleClass="card-flat" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="5.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
            </padding>
            <HBox spacing="10.0" VBox.vgrow="NEVER">
                <MFXFilterComboBox fx:id="customer" allowEdit="true" floatMode="BORDER" floatingText="Customer" prefColumnCount="0" prefWidth="1000.0" selectable="true" HBox.hgrow="ALWAYS" />
            </HBox>
            <AnchorPane VBox.vgrow="ALWAYS">
                <MFXLegacyTableView fx:id="cart" layoutY="-193.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="cartName" editable="false" prefWidth="75.0" sortable="false" text="Name" />
                        <TableColumn fx:id="cartQuantity" editable="false" prefWidth="50.0" sortable="false" text="Qnty" />
                        <TableColumn fx:id="cartPrice" editable="false" prefWidth="75.0" sortable="false" text="Price" />
                        <TableColumn fx:id="cartSubTotal" editable="false" prefWidth="75.0" sortable="false" text="Sub Total" />
                        <TableColumn fx:id="cartActions" editable="false" prefWidth="20.0" sortable="false" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </MFXLegacyTableView>
            </AnchorPane>
            <VBox spacing="20.0">
                <HBox alignment="CENTER_LEFT" spacing="10.0">
               <MFXFilterComboBox fx:id="discount" allowEdit="true" floatMode="BORDER" floatingText="Discount(0.00%)" prefColumnCount="0" prefWidth="500.0" selectable="true" />
               <MFXFilterComboBox fx:id="tax" allowEdit="true" floatMode="BORDER" floatingText="Tax(0.00%)" prefColumnCount="0" prefWidth="500.0" selectable="true" />
                </HBox>
                <HBox layoutX="10.0" layoutY="266.0" spacing="5.0">
                    <MFXButton fx:id="checkOutBtn" layoutX="10.0" layoutY="10.0" onAction="#savePOSSale" prefWidth="650.0" styleClass="check-out-button" text="CheckOut" />
                    <Region HBox.hgrow="ALWAYS" />
                    <MFXButton fx:id="emptyCartBtn" layoutX="10.0" layoutY="10.0" onAction="#clearCart" prefWidth="400.0" styleClass="empty-cart-button" text="Empty Cart" />
                </HBox>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                </padding>
            </VBox>
        </VBox>
    </right>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets right="5.0" />
            </BorderPane.margin>
            <VBox spacing="5.0" styleClass="card-flat" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="2.5" left="2.5" right="2.5" top="2.5" />
                </padding>
                <HBox spacing="10.0" styleClass="card-flat">
                    <padding>
                        <Insets topRightBottomLeft="5.0" />
                    </padding>
                    <HBox fx:id="refresh" alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <padding>
                            <Insets left="10.0" right="10.0" />
                        </padding>
                    </HBox>
                    <MFXTextField fx:id="search" floatMode="DISABLED" prefWidth="400.0" promptText="Search Product" />
                </HBox>
                <MFXScrollPane maxHeight="100.0" minHeight="60.0" prefHeight="80.0" vbarPolicy="NEVER" VBox.vgrow="SOMETIMES">
                    <HBox fx:id="filterPane" alignment="CENTER_LEFT" spacing="10.0">
                        <padding>
                            <Insets topRightBottomLeft="5.0" />
                        </padding>
                    </HBox>
                </MFXScrollPane>
                <MFXScrollPane fx:id="productHolder" hbarPolicy="NEVER" VBox.vgrow="ALWAYS" />
            </VBox>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" right="5.0" top="5.0" />
    </padding>
</BorderPane>
