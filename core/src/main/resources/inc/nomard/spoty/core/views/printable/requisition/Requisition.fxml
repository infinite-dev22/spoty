<?import io.github.palexdev.mfxcore.controls.Text?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.1"
      fx:controller="inc.nomard.spoty.core.views.printable.requisition.ProductRequisitionController">
    <children>
        <HBox>
            <children>
                <VBox alignment="BOTTOM_LEFT" prefHeight="80.0">
                    <children>
                        <Label text="Product Requisition"/>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="80.0">
                    <children>
                        <Label fx:id="quotationDate" text="Date"/>
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="50.0" spacing="20.0">
            <children>
                <Label text="Quotation ID"/>
                <Label fx:id="quotationRef" layoutX="10.0" layoutY="10.0" text="PQ19-102"/>
            </children>
        </HBox>
        <VBox spacing="10.0">
            <children>
                <HBox spacing="70.0">
                    <children>
                        <Label text="Requester's Name"/>
                        <Label fx:id="customerName" layoutX="10.0" layoutY="10.0" text="Jonathan Mark"/>
                    </children>
                </HBox>
                <HBox layoutX="10.0" layoutY="10.0" spacing="70.0">
                    <children>
                        <Label text="Contact Number"/>
                        <Label fx:id="customerNumber" layoutX="10.0" layoutY="10.0" text="(256) 752-92370"/>
                    </children>
                </HBox>
                <HBox layoutX="10.0" layoutY="10.0" spacing="140.0">
                    <children>
                        <Label text="Email"/>
                        <Label fx:id="customerEmail" layoutX="10.0" layoutY="10.0" text="mwigojm@gmail.com"/>
                    </children>
                </HBox>
            </children>
            <VBox.margin>
                <Insets bottom="30.0" top="10.0"/>
            </VBox.margin>
        </VBox>
        <Separator/>
        <VBox>
            <children>
                <TableView fx:id="itemsTable" focusTraversable="false" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                        <TableColumn fx:id="itemNumber" prefWidth="75.0" text="No."/>
                        <TableColumn fx:id="itemName" prefWidth="75.0" text="Name"/>
                        <TableColumn fx:id="itemQuantity" prefWidth="75.0" text="Qnty"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <VBox alignment="CENTER_RIGHT">
                    <children>
                        <HBox alignment="CENTER_RIGHT" spacing="90.0">
                            <children>
                                <Label text="Total Cost:"/>
                                <Label fx:id="totalCost" layoutX="10.0" layoutY="10.0" text="\$36806000"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" spacing="38.0">
                            <children>
                                <Label text="Total Discount(3%):"/>
                                <Label fx:id="totalDiscount" layoutX="10.0" layoutY="10.0" text="\$1104180"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="110.0" spacing="97.0">
                            <children>
                                <Label text="Net Cost:"/>
                                <Label fx:id="netCost" layoutX="10.0" layoutY="10.0" text="\$35701820"/>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </VBox>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" top="30.0"/>
            </VBox.margin>
        </VBox>
        <Text/>
        <Separator/>
        <HBox>
            <children>
                <VBox spacing="10.0">
                    <children>
                        <HBox spacing="20.0">
                            <children>
                                <Label text="Authorizer's Name:"/>
                                <Label fx:id="userName" text="Jonathan Mark"/>
                            </children>
                        </HBox>
                        <HBox spacing="45.0">
                            <children>
                                <Label text="Authorizer's ID:"/>
                                <Label fx:id="userId" text="5467324"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox layoutX="60.0" layoutY="10.0">
                    <children>
                        <Label text="Signature:"/>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets right="50.0"/>
            </padding>
            <VBox.margin>
                <Insets bottom="30.0" top="30.0"/>
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0"/>
    </padding>
</VBox>
