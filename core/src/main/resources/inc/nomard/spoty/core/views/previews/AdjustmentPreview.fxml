<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import io.github.palexdev.materialfx.controls.MFXTableView?>
<?import io.github.palexdev.materialfx.dialogs.MFXGenericDialog?>
<?import io.github.palexdev.mfxcore.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.*?>
<MFXGenericDialog xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
                  fx:controller="inc.nomard.spoty.core.views.previews.AdjustmentPreviewController">
    <padding>
        <Insets left="10.0" right="10"/>
    </padding>
    <center>
        <MFXScrollPane fitToHeight="true" fitToWidth="true">
            <VBox maxHeight="900.0" maxWidth="1000.0" minHeight="600.0" minWidth="500.0" prefHeight="800.0"
                  prefWidth="700.0">
                <padding>
                    <Insets bottom="20.0" left="10.0" right="10.0" top="20.0"/>
                </padding>
                <HBox maxHeight="150.0" minHeight="50.0" prefHeight="100.0">
                    <VBox alignment="BOTTOM_LEFT" prefHeight="80.0">
                        <Label styleClass="preview-header" text="Inventory Adjustment"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="80.0">
                        <Label styleClass="preview-header" text="Date: "/>
                        <Label fx:id="adjustmentDate"/>
                    </HBox>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="50.0" spacing="20.0">
                    <Label styleClass="preview-header" text="Invoice ID"/>
                    <Label fx:id="adjustmentRef" layoutX="10.0" layoutY="10.0"/>
                </HBox>
                <HBox layoutX="10.0" layoutY="10.0" prefHeight="50.0" spacing="20.0">
                    <Label styleClass="preview-header" text="Note: "/>
                    <Label fx:id="adjustmentNote" layoutX="10.0" layoutY="10.0" wrapText="true"/>
                </HBox>
                <Separator/>
                <VBox>
                    <VBox.margin>
                        <Insets bottom="10.0" top="30.0"/>
                    </VBox.margin>
                    <MFXTableView fx:id="itemsTable" prefWidth="200.0"/>
                </VBox>
                <Separator/>
                <HBox spacing="20.0">
                    <padding>
                        <Insets right="50.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="30.0" top="30.0"/>
                    </VBox.margin>
                    <Label text="Done By:"/>
                    <Label fx:id="doneBy" text="Jonathan Mark"/>
                </HBox>
            </VBox>
        </MFXScrollPane>
    </center>
</MFXGenericDialog>
