<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import io.github.palexdev.materialfx.dialogs.MFXGenericDialog?>
<?import io.github.palexdev.mfxcore.controls.Text?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<MFXGenericDialog xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.1"
                  fx:controller="inc.nomard.spoty.core.views.printable.general.GeneralViewController">
    <stylesheets>
        <URL value="@../../../styles/base.css"/>
        <URL value="@../../../styles/Common.css"/>
        <URL value="@../../../styles/TextFields.css"/>
    </stylesheets>
    <padding>
        <Insets left="10.0" right="10"/>
    </padding>
    <center>
        <MFXScrollPane>
            <VBox prefWidth="600">
                <padding>
                    <Insets bottom="20.0" top="20.0"/>
                </padding>
                <HBox>
                    <VBox alignment="BOTTOM_LEFT" prefHeight="80.0">
                        <Label text="Purchase Order"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <VBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="80.0">
                        <Label fx:id="dateLabel" text="Date"/>
                    </VBox>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="50.0" spacing="20.0">
                    <Label text="Purchase ID"/>
                    <Label fx:id="refLabel" layoutX="10.0" layoutY="10.0"/>
                </HBox>
                <VBox spacing="10.0">
                    <VBox.margin>
                        <Insets bottom="30.0" top="10.0"/>
                    </VBox.margin>
                    <HBox spacing="70.0">
                        <Label text="Purchaser's Name"/>
                        <Label fx:id="nameLabel" layoutX="10.0" layoutY="10.0"/>
                    </HBox>
                    <HBox layoutX="10.0" layoutY="10.0" spacing="70.0">
                        <Label text="Contact Number"/>
                        <Label fx:id="numberLabel" layoutX="10.0" layoutY="10.0"/>
                    </HBox>
                    <HBox layoutX="10.0" layoutY="10.0" spacing="140.0">
                        <Label text="Email"/>
                        <Label fx:id="emailLabel" layoutX="10.0" layoutY="10.0"/>
                    </HBox>
                </VBox>
                <Separator/>
                <VBox>
                    <VBox.margin>
                        <Insets bottom="10.0" top="30.0"/>
                    </VBox.margin>
                    <TableView fx:id="itemsTable" focusTraversable="false" prefHeight="200.0" prefWidth="200.0">
                        <columns>
                            <TableColumn fx:id="itemNumber" prefWidth="75.0" text="No."/>
                            <TableColumn fx:id="itemName" prefWidth="75.0" text="Name"/>
                            <TableColumn fx:id="itemQuantity" prefWidth="75.0" text="Qnty"/>
                            <TableColumn fx:id="itemCost" prefWidth="75.0" text="Cost"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <VBox alignment="CENTER_RIGHT">
                        <VBox.margin>
                            <Insets top="10.0"/>
                        </VBox.margin>
                        <HBox alignment="CENTER_RIGHT" spacing="90.0">
                            <Label text="Total Cost:"/>
                            <Label fx:id="totalCost" layoutX="10.0" layoutY="10.0"/>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" spacing="38.0">
                            <Label text="Total Discount(3%):"/>
                            <Label fx:id="totalDiscount" layoutX="10.0" layoutY="10.0"/>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="110.0" spacing="97.0">
                            <Label text="Net Cost:"/>
                            <Label fx:id="netCost" layoutX="10.0" layoutY="10.0"/>
                        </HBox>
                    </VBox>
                </VBox>
                <Text/>
                <Separator/>
                <HBox>
                    <padding>
                        <Insets right="50.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="30.0" top="30.0"/>
                    </VBox.margin>
                    <VBox spacing="10.0">
                        <HBox spacing="20.0">
                            <Label text="Authorizer Name:"/>
                            <Label fx:id="signerNameLabel"/>
                        </HBox>
                        <HBox spacing="45.0">
                            <Label text="Authorizer ID:"/>
                            <Label fx:id="signerIdLabel"/>
                        </HBox>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <VBox layoutX="60.0" layoutY="10.0">
                        <Label text="Signature:"/>
                    </VBox>
                </HBox>
            </VBox>
        </MFXScrollPane>
    </center>
</MFXGenericDialog>