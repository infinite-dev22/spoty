<?import io.github.palexdev.materialfx.controls.MFXTableView?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="adjustmentFormContentPane" cache="true" cacheHint="SPEED" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="inc.nomard.spoty.core.views.forms.AdjustmentMasterFormController">
    <center>
        <AnchorPane styleClass="card-flat">
            <padding>
                <Insets topRightBottomLeft="5.0"/>
            </padding>
            <Label fx:id="adjustmentFormTitle" text="Adjustment Form" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="0.0"/>
            <Separator prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                       AnchorPane.topAnchor="20.0"/>
            <GridPane hgap="20.0" layoutX="10.0" layoutY="50.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="180.0" AnchorPane.topAnchor="40.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <HBox prefHeight="100.0" prefWidth="200.0"/>
            </GridPane>
            <MFXButton fx:id="adjustmentProductAddBtn" layoutX="930.0" layoutY="80.0" text="Add Product" styleClass="filled"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0"/>
            <MFXTableView fx:id="adjustmentDetailTable" layoutX="5.0" layoutY="172.0" AnchorPane.bottomAnchor="78.0"
                          AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="160.0"/>
            <MFXTextField fx:id="adjustmentNote" floatMode="BORDER" floatingText="Note" layoutY="104.0"
                          prefWidth="1000.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                          AnchorPane.topAnchor="40.0"/>
            <HBox alignment="CENTER_RIGHT" spacing="20.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0">
                <MFXButton fx:id="saveBtn" onMouseClicked="#adjustmentSaveBtnClicked" styleClass="filled" text="Save"/>
                <MFXButton fx:id="cancelBtn" onMouseClicked="#adjustmentCancelBtnClicked" styleClass="outlined"
                           text="Cancel"/>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </HBox>
        </AnchorPane>
    </center>
</BorderPane>
