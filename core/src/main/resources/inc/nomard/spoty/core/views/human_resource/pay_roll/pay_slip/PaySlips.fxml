<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="contentPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="inc.nomard.spoty.core.views.human_resource.pay_roll.pay_slip.PaySlipsController">
    <padding>
        <Insets topRightBottomLeft="5.0"/>
    </padding>
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <AnchorPane styleClass="card-flat" BorderPane.alignment="CENTER" AnchorPane.leftAnchor="0.0"
                        AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <padding>
                    <Insets topRightBottomLeft="5.0"/>
                </padding>
                <MFXTextField fx:id="searchBar" floatMode="DISABLED" promptText="Search payslips"
                              prefWidth="300.0"
                              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                <HBox fx:id="actionsPane" alignment="CENTER_RIGHT" spacing="20.0" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <MFXButton fx:id="importBtn" buttonType="RAISED" depthLevel="LEVEL1" text="Import"/>
                    <MFXButton fx:id="createBtn" buttonType="RAISED" depthLevel="LEVEL1"
                               onMouseClicked="#createBtnClicked" text="Create"/>
                </HBox>
            </AnchorPane>
            <MFXScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" styleClass="card"
                           BorderPane.alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
                <BorderPane.margin>
                    <Insets top="20.0"/>
                </BorderPane.margin>
                <VBox fx:id="paySlipItemHolder" spacing="10" styleClass="card" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </VBox>
            </MFXScrollPane>
        </AnchorPane>
    </center>
</BorderPane>
