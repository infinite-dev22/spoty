<?import inc.nomard.spoty.utils.navigation.Spacer?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import io.github.palexdev.mfxcore.controls.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" minHeight="351.0" prefHeight="551.0" maxHeight="751.0"
            styleClass="card-flat"
            xmlns="http://javafx.com/javafx/19"
            fx:controller="inc.nomard.spoty.core.views.components.TotalRevenueController">
    <HBox spacing="20" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets topRightBottomLeft="20.0"/>
        </padding>
        <Label fx:id="cardTitle" layoutX="14.0" layoutY="8.0" styleClass="card-title" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        <Spacer/>
        <HBox fx:id="buttonHolder" spacing="10"/>
        <padding>
            <Insets topRightBottomLeft="5.0"/>
        </padding>
    </HBox>
    <BarChart fx:id="barChart" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="32.0">
        <xAxis>
            <CategoryAxis side="BOTTOM"/>
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT"/>
        </yAxis>
    </BarChart>
</AnchorPane>
