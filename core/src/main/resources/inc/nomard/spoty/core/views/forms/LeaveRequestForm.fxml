<?import com.dlsc.gemsfx.TimePicker?>
<?import io.github.palexdev.materialfx.controls.MFXDatePicker?>
<?import io.github.palexdev.materialfx.controls.MFXFilterComboBox?>
<?import io.github.palexdev.materialfx.dialogs.MFXGenericDialog?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXButton?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<MFXGenericDialog xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19"
                  fx:controller="inc.nomard.spoty.core.views.forms.LeaveRequestFormController">
    <stylesheets>
        <URL value="@../../styles/Common.css"/>
        <URL value="@../../styles/TextFields.css"/>
        <URL value="@../../styles/base.css"/>
        <URL value="@../../styles/theming/Default.css"/>
    </stylesheets>
    <center>
        <VBox layoutY="10.0" spacing="8.0">
            <padding>
                <Insets left="10.0" right="10.0" top="10.0" bottom="10.0"/>
            </padding>
            <VBox spacing="2.0">
                <padding>
                    <Insets bottom="5" top="2.5"/>
                </padding>
                <MFXFilterComboBox fx:id="employee" floatMode="BORDER" floatingText="Employee" prefWidth="400.0"/>
                <Label id="validationLabel" fx:id="employeeValidationLabel" maxWidth="1.7976931348623157E308"
                       minHeight="-Infinity" styleClass="input-validation-error" visible="false" managed="false"
                       wrapText="true"/>
            </VBox>
            <VBox spacing="2.0">
                <padding>
                    <Insets bottom="5" top="2.5"/>
                </padding>
                <MFXFilterComboBox fx:id="leaveType" floatMode="BORDER" floatingText="Leave Type" prefWidth="400.0"/>
                <Label id="validationLabel" fx:id="leaveTypeValidationLabel" maxWidth="1.7976931348623157E308"
                       minHeight="-Infinity" styleClass="input-validation-error" visible="false" managed="false"
                       wrapText="true"/>
            </VBox>
            <HBox spacing="10.0">
                <VBox spacing="2.0">
                    <padding>
                        <Insets bottom="5" top="2.5"/>
                    </padding>
                    <MFXDatePicker fx:id="fromDate" floatMode="BORDER" floatingText="From Date" prefWidth="190.0"/>
                    <Label id="validationLabel" fx:id="fromDateValidationLabel" maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity" styleClass="input-validation-error" visible="false" managed="false"
                           wrapText="true"/>
                </VBox>
                <VBox spacing="2.0">
                    <padding>
                        <Insets bottom="5" top="2.5"/>
                    </padding>
                    <TimePicker fx:id="fromTime" promptText="From Time" prefWidth="190.0"/>
                    <Label id="validationLabel" fx:id="fromTimeValidationLabel" maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity" styleClass="input-validation-error" visible="false" managed="false"
                           wrapText="true"/>
                </VBox>
            </HBox>
            <HBox spacing="10.0">
                <VBox spacing="2.0">
                    <padding>
                        <Insets bottom="5" top="2.5"/>
                    </padding>
                    <MFXDatePicker fx:id="toDate" floatMode="BORDER" floatingText="From Date" prefWidth="190.0"/>
                    <Label id="validationLabel" fx:id="toDateValidationLabel" maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity" styleClass="input-validation-error" visible="false" managed="false"
                           wrapText="true"/>
                </VBox>
                <VBox spacing="2.0">
                    <padding>
                        <Insets bottom="5" top="2.5"/>
                    </padding>
                    <TimePicker fx:id="toTime" promptText="To Time" prefWidth="190.0"/>
                    <Label id="validationLabel" fx:id="toTimeValidationLabel" maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity" styleClass="input-validation-error" visible="false" managed="false"
                           wrapText="true"/>
                </VBox>
            </HBox>
            <VBox spacing="2.0">
                <padding>
                    <Insets bottom="5" top="2.5"/>
                </padding>
                <TextArea fx:id="reason" promptText="Reason" prefWidth="400.0" prefHeight="100"/>
                <Label id="validationLabel" fx:id="reasonValidationLabel" maxWidth="1.7976931348623157E308"
                       minHeight="-Infinity" styleClass="input-validation-error" visible="false" managed="false"
                       wrapText="true"/>
            </VBox>
            <HBox alignment="CENTER" spacing="16.0">
                <VBox fx:id="documentBtn" alignment="CENTER" prefWidth="400.0" spacing="8.0"
                      styleClass="card-flat">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <padding>
                        <Insets topRightBottomLeft="16.0"/>
                    </padding>
                    <HBox fx:id="uploadIcon" alignment="CENTER"/>
                    <Label fx:id="fileLabel" text="Click to upload or Drag and drop pdf. (max. size 1MB)"
                           wrapText="true"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="20.0">
            <padding>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </padding>
            <MFXButton styleClass="filled" fx:id="saveBtn" text="Save"/>
            <MFXButton styleClass="outlined" fx:id="cancelBtn" text="Cancel"/>
        </HBox>
    </bottom>
</MFXGenericDialog>
