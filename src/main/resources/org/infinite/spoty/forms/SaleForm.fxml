<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane cache="true" cacheHint="SPEED" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.infinite.spoty.forms.SaleFormController">
    <center>
        <AnchorPane fx:id="saleFormContentPane" prefHeight="400.0" prefWidth="600.0" styleClass="card" stylesheets="@../styles/Common.css">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label fx:id="saleFormTitle" text="Create" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
            <Separator prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0" />
            <GridPane hgap="20.0" layoutX="10.0" layoutY="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <MFXDatePicker fx:id="saleDate" floatMode="BORDER" floatingText="Date" prefWidth="400.0" />
                <MFXFilterComboBox fx:id="saleCustomerId" floatMode="BORDER" floatingText="Customer" prefWidth="400.0" GridPane.columnIndex="1" />
                <MFXFilterComboBox fx:id="saleBranchId" floatMode="BORDER" floatingText="Branch" layoutX="10.0" layoutY="12.0" prefWidth="400.0" GridPane.columnIndex="2" />
            </GridPane>
            <MFXElevatedButton layoutX="500.0" layoutY="110.0" onMouseClicked="#addBtnClicked" text="Add" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="90.0" />
            <MFXTableView fx:id="saleProductsTable" AnchorPane.bottomAnchor="120.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="140.0" />
            <GridPane hgap="20.0" layoutX="20.0" layoutY="60.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <MFXTextField fx:id="saleNote" floatMode="BORDER" floatingText="Note" prefWidth="400.0" />
                <MFXFilterComboBox fx:id="saleStatus" floatMode="BORDER" floatingText="Status" layoutX="10.0" layoutY="12.0" prefWidth="400.0" GridPane.columnIndex="1" />
                <MFXFilterComboBox fx:id="salePaymentStatus" floatMode="BORDER" floatingText="Payment Status" layoutX="295.0" layoutY="12.0" prefWidth="400.0" GridPane.columnIndex="2" />
            </GridPane>
            <HBox alignment="CENTER_RIGHT" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <MFXFilledButton onMouseClicked="#saveBtnClicked" text="Save" />
                <MFXOutlinedButton onMouseClicked="#cancelBtnClicked" text="Cancel" />
            </HBox>
        </AnchorPane>
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="40.0" />
    </padding>
</BorderPane>
