<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="transferMasterFormContentPane" cache="true" cacheHint="SPEED" styleClass="card" stylesheets="@../styles/Common.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.infinite.spoty.forms.TransferMasterFormController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label fx:id="transferMasterFormTitle" text="Create" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
    <Separator prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0" />
    <GridPane hgap="20.0" layoutX="10.0" layoutY="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <MFXFilterComboBox fx:id="transferMasterBranchId" floatMode="BORDER" floatingText="Branch" prefWidth="400.0" />
        <MFXDatePicker fx:id="transferMasterDate" floatMode="BORDER" floatingText="Date" prefWidth="400.0" GridPane.columnIndex="1" />
    </GridPane>
    <MFXElevatedButton fx:id="transferMasterProductAddBtn" layoutX="930.0" layoutY="80.0" text="Add Product" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="90.0" />
    <MFXTableView fx:id="transferMasterProductsTable" AnchorPane.bottomAnchor="120.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="140.0" />
    <MFXTextField fx:id="transferMasterNote" floatMode="BORDER" floatingText="Note" prefWidth="1000.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
    <HBox alignment="CENTER_RIGHT" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <MFXFilledButton onMouseClicked="#transferMasterSaveBtnClicked" text="Save" />
        <MFXOutlinedButton onMouseClicked="#transferMasterCancelBtnClicked" text="Cancel" />
    </HBox>
</AnchorPane>
