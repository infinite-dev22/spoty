<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane styleClass="card" stylesheets="@../styles/Common.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.infinite.spoty.forms.AdjustmentProductsFormController">
    <content>
        <AnchorPane>
            <VBox layoutY="10.0" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
                <padding>
                    <Insets left="10.0" right="10.0" />
                </padding>
                <MFXFilterComboBox fx:id="adjustmentProductsPdct" floatMode="BORDER" floatingText="Product" prefWidth="400.0" />
                <MFXTextField fx:id="adjustmentProductsQnty" floatMode="BORDER" floatingText="Quantity" prefWidth="400.0" />
            <MFXComboBox fx:id="adjustmentType" floatMode="BORDER" floatingText="Adjustment Type" prefWidth="400.0" />
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                    <MFXFilledButton fx:id="adjustmentProductsSaveBtn" text="Save" />
                    <MFXOutlinedButton fx:id="adjustmentProductsCancelBtn" text="Cancel" />
                </HBox>
            </VBox>
        </AnchorPane>
    </content>
    <header>
      <VBox spacing="5.0">
         <children>
              <Label fx:id="adjustmentProductsTitle" styleClass="card-title" text="Create" />
               <Separator prefWidth="200.0" />
         </children>
      </VBox>
    </header>
    <padding>
        <Insets left="10.0" right="10.0" top="10.0" />
    </padding>
</DialogPane>
