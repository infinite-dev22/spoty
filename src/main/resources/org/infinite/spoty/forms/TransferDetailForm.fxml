<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXFilterComboBox?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXFilledButton?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXOutlinedButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" styleClass="card" stylesheets="@../styles/Common.css"
            xmlns="http://javafx.com/javafx/19"
            fx:controller="org.infinite.spoty.forms.TransferDetailFormController">
    <content>
        <AnchorPane>
            <VBox layoutY="10.0" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="20.0">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
                <MFXFilterComboBox fx:id="transferDetailPdct" floatMode="BORDER" floatingText="Product"
                                   prefWidth="400.0"/>
                <MFXTextField fx:id="transferDetailQnty" floatMode="BORDER" floatingText="Quantity"
                              prefWidth="400.0"/>
                <MFXTextField fx:id="transferDetailDescription" floatMode="BORDER" floatingText="Description"
                              prefWidth="400.0"/>
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                    <MFXFilledButton fx:id="transferDetailSaveBtn" text="Save"/>
                    <MFXOutlinedButton fx:id="transferDetailCancelBtn" text="Cancel"/>
                </HBox>
            </VBox>
        </AnchorPane>
    </content>
    <header>
        <VBox spacing="5.0">
            <Label fx:id="transferDetailTitle" styleClass="card-title" text="Create"/>
            <Separator prefWidth="200.0"/>
        </VBox>
    </header>
    <padding>
        <Insets left="10.0" right="10.0" top="10.0"/>
    </padding>
</DialogPane>
