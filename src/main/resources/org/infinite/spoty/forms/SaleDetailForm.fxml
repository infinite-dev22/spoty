<?import io.github.palexdev.materialfx.controls.MFXFilterComboBox?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" styleClass="card" xmlns="http://javafx.com/javafx/19"
            fx:controller="org.infinite.spoty.forms.SaleDetailFormController">
    <stylesheets>
        <URL value="@../styles/Common.css"/>
        <URL value="@../styles/TextFields.css"/>
    </stylesheets>
    <content>
        <AnchorPane>
            <Separator layoutY="25.0" prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                       AnchorPane.topAnchor="0.0"/>
            <VBox layoutY="10.0" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
                <padding>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </padding>
                <VBox spacing="2.0">
                    <padding>
                        <Insets right="10.0" top="2.5"/>
                    </padding>
                    <MFXFilterComboBox fx:id="saleDetailPdct" floatMode="BORDER" floatingText="Product"
                                       prefWidth="400.0"/>
                    <Label id="validationLabel" fx:id="saleDetailPdctValidationLabel"
                           maxWidth="1.7976931348623157E308" minHeight="-Infinity" styleClass="input-validation-error"
                           visible="false" wrapText="true"/>
                </VBox>
                <VBox spacing="2.0">
                    <padding>
                        <Insets right="10.0" top="2.5"/>
                    </padding>
                    <MFXTextField fx:id="saleDetailQnty" floatMode="BORDER" floatingText="Quantity"
                                  prefWidth="400.0"/>
                    <Label id="validationLabel" fx:id="saleDetailQntyValidationLabel"
                           maxWidth="1.7976931348623157E308" minHeight="-Infinity" styleClass="input-validation-error"
                           visible="false" wrapText="true"/>
                </VBox>
                <VBox spacing="2.0">
                    <padding>
                        <Insets right="10.0" top="2.5"/>
                    </padding>
                    <MFXTextField fx:id="saleDetailOrderTax" floatMode="BORDER" floatingText="Order Tax"
                                  prefWidth="400.0"/>
                </VBox>
                <VBox spacing="2.0">
                    <padding>
                        <Insets right="10.0" top="2.5"/>
                    </padding>
                    <MFXTextField fx:id="saleDetailDiscount" floatMode="BORDER" floatingText="Discount"
                                  prefWidth="400.0"/>
                </VBox>
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                    <MFXButton styleClass="filled" fx:id="saleProductsSaveBtn" text="Save"/>
                    <MFXButton styleClass="outlined" fx:id="saleProductsCancelBtn" text="Cancel"/>
                </HBox>
            </VBox>
        </AnchorPane>
    </content>
    <header>
        <Label fx:id="saleProductsTitle" styleClass="card-title" text="Create"/>
    </header>
    <padding>
        <Insets left="10.0" right="10.0" top="10.0"/>
    </padding>
</DialogPane>
