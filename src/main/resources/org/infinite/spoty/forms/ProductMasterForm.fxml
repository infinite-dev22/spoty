<?import io.github.palexdev.materialfx.controls.*?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXButton?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="productFormContentPane" cache="true" cacheHint="SPEED"
            xmlns="http://javafx.com/javafx/19" fx:controller="org.infinite.spoty.forms.ProductMasterFormController">
    <stylesheets>
        <URL value="@../styles/Common.css"/>
        <URL value="@../styles/TextFields.css"/>
    </stylesheets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="40.0"/>
    </padding>
    <center>
        <AnchorPane styleClass="card">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Label fx:id="productFormTitle" text="Create" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="0.0"/>
            <Separator prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                       AnchorPane.topAnchor="20.0"/>
            <GridPane hgap="20.0" vgap="10.0" layoutX="10.0" layoutY="50.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <VBox spacing="2.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <padding>
                        <Insets bottom="2.0"/>
                    </padding>
                    <MFXTextField fx:id="productFormName" floatMode="BORDER" floatingText="Name" prefWidth="400.0"/>
                    <Label id="validationLabel" fx:id="productFormNameValidationLabel" maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity" styleClass="input-validation-error" visible="false" wrapText="true"/>
                </VBox>
                <VBox spacing="2.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <padding>
                        <Insets bottom="2.0"/>
                    </padding>
                    <MFXFilterComboBox fx:id="productFormCategory" floatMode="BORDER" floatingText="Category"
                                       prefWidth="400.0"/>
                    <Label id="validationLabel" fx:id="productFormCategoryValidationLabel"
                           maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity" styleClass="input-validation-error" visible="false" wrapText="true"/>
                </VBox>
                <VBox spacing="2.0" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <padding>
                        <Insets bottom="2.0"/>
                    </padding>
                    <MFXFilterComboBox fx:id="productFormBrand" floatMode="BORDER" floatingText="Brand" layoutX="21.0"
                                       layoutY="80.0" prefWidth="400.0"/>
                    <Label id="validationLabel" fx:id="productFormBrandValidationLabel"
                           maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity" styleClass="input-validation-error" visible="false" wrapText="true"/>
                </VBox>
                <MFXComboBox fx:id="productFormBarCodeType" floatMode="BORDER" floatingText="Barcode Type"
                             layoutX="21.0"
                             layoutY="202.0" prefWidth="400.0" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <MFXToggleButton fx:id="hasVariantToggle" layoutX="10.0" layoutY="32.0" text="Has variants"
                                 GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
            <MFXButton fx:id="productVariantAddBtn" layoutX="930.0" layoutY="90.0" text="Add Variant"
                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0" disable="true"/>
            <MFXTableView fx:id="productDetailTable" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0"
                          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="170.0" disable="true"/>
            <MFXToggleButton fx:id="notForSaleToggle" layoutX="10.0" layoutY="32.0" text="Not For Sale"
                             AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"/>
            <HBox alignment="CENTER_RIGHT" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="100.0"
                  AnchorPane.rightAnchor="0.0">
                <MFXButton styleClass="filled" fx:id="productMasterSaveBtn" onMouseClicked="#productSaveBtnClicked"
                           text="Save"/>
                <MFXButton styleClass="outlined" onMouseClicked="#productCancelBtnClicked" text="Cancel"/>
            </HBox>
        </AnchorPane>
    </center>
</BorderPane>
