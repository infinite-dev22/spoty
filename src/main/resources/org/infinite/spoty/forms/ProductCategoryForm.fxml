<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXFilledButton?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXOutlinedButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" styleClass="card"
            stylesheets="@../styles/Common.css" xmlns="http://javafx.com/javafx/19"
            fx:controller="org.infinite.spoty.forms.ProductCategoryFormController">
    <content>
        <VBox spacing="20.0">
            <MFXTextField fx:id="dialogCategoryCode" floatMode="BORDER" floatingText="Category Code" prefWidth="400.0"/>
            <MFXTextField fx:id="dialogCategoryName" floatMode="BORDER" floatingText="Category Name" prefWidth="400.0"/>
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
                <padding>
                    <Insets top="10.0"/>
                </padding>
                <MFXFilledButton fx:id="dialogSaveBtn" text="Save"/>
                <MFXOutlinedButton fx:id="dialogCancelBtn" text="Cancel"/>
            </HBox>
        </VBox>
    </content>
    <padding>
        <Insets left="10.0" right="10.0" top="10.0"/>
    </padding>
</DialogPane>
