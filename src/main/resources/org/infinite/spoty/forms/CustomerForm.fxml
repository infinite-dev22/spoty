<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXFilledButton?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXOutlinedButton?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" styleClass="card" stylesheets="@../styles/Common.css"
            xmlns="http://javafx.com/javafx/19" fx:controller="org.infinite.spoty.forms.CustomerFormController">
    <content>
        <VBox spacing="20.0">
            <GridPane hgap="20.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <VBox spacing="5.0">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                    <MFXTextField fx:id="customerFormName" textLimit="50" floatMode="BORDER" floatingText="Name"
                                  prefWidth="300.0"/>
                    <Label id="validationLabel" fx:id="validationLabel1" maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity"
                           textFill="#ef6e6b" visible="false" wrapText="true"/>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="1">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                    <MFXTextField fx:id="customerFormEmail" textLimit="100" floatMode="BORDER" floatingText="Email"
                                  prefWidth="300.0"/>
                    <Label id="validationLabel" fx:id="validationLabel2" maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity"
                           textFill="#ef6e6b" visible="false" wrapText="true"/>
                </VBox>
                <VBox spacing="5.0" GridPane.rowIndex="1">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                    <MFXTextField fx:id="customerFormPhone" textLimit="12" floatMode="BORDER" floatingText="Phone"
                                  prefWidth="300.0"/>
                    <Label id="validationLabel" fx:id="validationLabel3" maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity"
                           textFill="#ef6e6b" visible="false" wrapText="true"/>
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                    <MFXTextField fx:id="customerFormCity" textLimit="25" floatMode="BORDER" floatingText="City"
                                  prefWidth="300.0"
                    />
                </VBox>
                <VBox spacing="5.0" GridPane.rowIndex="2">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                    <MFXTextField fx:id="customerFormCountry" textLimit="25" floatMode="BORDER" floatingText="Country"
                                  prefWidth="300.0"
                    />
                </VBox>
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <padding>
                        <Insets right="10.0" top="10.0"/>
                    </padding>
                    <MFXTextField fx:id="customerFormAddress" textLimit="35" floatMode="BORDER" floatingText="Address"
                                  prefWidth="300.0"
                    />
                </VBox>
                <VBox spacing="5.0" GridPane.rowIndex="3">
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                    <MFXTextField fx:id="customerFormTaxNumber" textLimit="15" floatMode="BORDER" floatingText="Tax No."
                                  prefWidth="300.0"
                    />
                </VBox>
            </GridPane>
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <MFXFilledButton fx:id="customerFormSaveBtn" text="Save"/>
                <MFXOutlinedButton fx:id="customerFormCancelBtn" text="Cancel"/>
            </HBox>
        </VBox>
    </content>
    <padding>
        <Insets left="10.0" right="10.0" top="10.0"/>
    </padding>
    <header>
        <VBox spacing="5.0">
            <Label fx:id="customerFormTitle" text="Create"/>
            <Separator prefWidth="200.0"/>
        </VBox>
    </header>
</DialogPane>
