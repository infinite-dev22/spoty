<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane styleClass="card" stylesheets="@../styles/Common.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.infinite.spoty.forms.ProductFormController">
    <content>
        <VBox spacing="20.0">
             <MFXTextField fx:id="productFormName" floatMode="BORDER" floatingText="Name" prefWidth="400.0" />
         <MFXComboBox fx:id="productFormCategory" floatMode="BORDER" floatingText="Category" prefWidth="400.0" />
         <MFXComboBox fx:id="productFormBrand" floatMode="BORDER" floatingText="Brand" layoutX="21.0" layoutY="80.0" prefWidth="400.0" />
         <MFXComboBox fx:id="productFormBarCodeType" floatMode="BORDER" floatingText="Barcode Type" layoutX="21.0" layoutY="202.0" prefWidth="400.0" />
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <MFXFilledButton fx:id="productFormSaveBtn" text="Save" />
                <MFXOutlinedButton fx:id="productFormCancelBtn" text="Cancel" />
            </HBox>
        </VBox>
    </content>
    <padding>
        <Insets left="10.0" right="10.0" top="10.0" />
    </padding>
    <header>
        <VBox spacing="5.0">
            <Label fx:id="productFormTitle" text="Create" />
            <Separator prefWidth="200.0" />
        </VBox>
    </header>
</DialogPane>
