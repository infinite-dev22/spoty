<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXDatePicker?>
<?import io.github.palexdev.materialfx.controls.MFXFilterComboBox?>
<?import io.github.palexdev.materialfx.controls.MFXTableView?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXElevatedButton?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXFilledButton?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXOutlinedButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="stockInMasterFormContentPane" cache="true" cacheHint="SPEED"
            styleClass="card" stylesheets="@../styles/Common.css" xmlns="http://javafx.com/javafx/19"
            fx:controller="org.infinite.spoty.forms.StockInMasterFormController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label fx:id="stockInMasterFormTitle" text="Create" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
           AnchorPane.topAnchor="0.0"/>
    <Separator prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0"/>
    <GridPane hgap="20.0" layoutX="10.0" layoutY="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="40.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <MFXFilterComboBox fx:id="stockInMasterBranchId" floatMode="BORDER" floatingText="From Branch" prefWidth="400.0"
                           GridPane.columnIndex="0"/>
        <MFXDatePicker fx:id="stockInMasterDate" floatMode="BORDER" floatingText="Date" prefWidth="400.0"
                       GridPane.columnIndex="2"/>
    </GridPane>
    <MFXElevatedButton fx:id="stockInMasterProductAddBtn" layoutX="930.0" layoutY="80.0" text="Add Product"
                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="90.0"/>
    <MFXTableView fx:id="stockInMasterProductsTable" AnchorPane.bottomAnchor="120.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="140.0"/>
    <MFXTextField fx:id="stockInMasterNote" floatMode="BORDER" floatingText="Note" prefWidth="1000.0"
                  AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
    <HBox alignment="CENTER_RIGHT" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">
        <MFXFilledButton onMouseClicked="#stockInMasterSaveBtnClicked" text="Save"/>
        <MFXOutlinedButton onMouseClicked="#stockInMasterCancelBtnClicked" text="Cancel"/>
    </HBox>
</AnchorPane>
