<?import io.github.palexdev.materialfx.dialogs.MFXGenericDialog?>
<?import io.github.palexdev.mfxcomponents.controls.buttons.MFXButton?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.materialfx.controls.MFXFilterComboBox?>
<MFXGenericDialog xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19"
                  fx:controller="org.infinite.spoty.forms.UOMFormController">
    <stylesheets>
        <URL value="@../../styles/Common.css"/>
        <URL value="@../../styles/TextFields.css"/>
    </stylesheets>
    <center>
        <MFXScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <VBox fx:id="inputsHolder" layoutY="10.0" spacing="10.0">
                <padding>
                    <Insets left="10.0" right="10.0" top="10.0" bottom="10.0"/>
                </padding>
                <VBox spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" top="2.5"/>
                    </padding>
                    <MFXTextField fx:id="uomFormName" floatMode="BORDER" floatingText="Name" prefWidth="400.0"/>
                    <Label id="validationLabel" fx:id="uomFormNameValidationLabel"
                           maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity" styleClass="input-validation-error" visible="false" wrapText="true"/>
                </VBox>
                <VBox spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" top="2.5"/>
                    </padding>
                    <MFXTextField fx:id="uomFormShortName" floatMode="BORDER" floatingText="Short Name"
                                  prefWidth="400.0"/>
                    <Label id="validationLabel" fx:id="uomFormShortNameValidationLabel"
                           maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity" styleClass="input-validation-error" visible="false" wrapText="true"/>
                </VBox>
                <VBox spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" top="2.5"/>
                    </padding>
                    <MFXFilterComboBox fx:id="uomFormBaseUnit" floatMode="BORDER" floatingText="Base Unit"
                                       prefWidth="400.0"/>
                </VBox>
                <VBox fx:id="formsHolder" visible="false" managed="false">
                    <VBox spacing="5.0">
                        <padding>
                            <Insets bottom="5.0" top="2.5"/>
                        </padding>
                        <MFXTextField fx:id="uomFormOperator" floatMode="BORDER" floatingText="Operator"
                                      prefWidth="400.0"/>
                        <Label id="validationLabel" fx:id="uomFormOperatorValidationLabel"
                               maxWidth="1.7976931348623157E308"
                               minHeight="-Infinity" styleClass="input-validation-error" visible="false"
                               wrapText="true"/>
                    </VBox>
                    <VBox spacing="5.0">
                        <padding>
                            <Insets bottom="5.0" top="2.5"/>
                        </padding>
                        <MFXTextField fx:id="uomFormOperatorValue" floatMode="BORDER" floatingText="Operator Value"
                                      prefWidth="400.0"/>
                        <Label id="validationLabel" fx:id="uomFormOperatorValueValidationLabel"
                               maxWidth="1.7976931348623157E308"
                               minHeight="-Infinity" styleClass="input-validation-error" visible="false"
                               wrapText="true"/>
                    </VBox>
                    <padding>
                        <Insets top="15.0"/>
                    </padding>
                </VBox>
            </VBox>
        </MFXScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="20.0">
            <padding>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </padding>
            <MFXButton styleClass="filled" fx:id="uomFormSaveBtn" text="Save"/>
            <MFXButton styleClass="outlined" fx:id="uomFormCancelBtn" text="Cancel"/>
        </HBox>
    </bottom>
</MFXGenericDialog>
