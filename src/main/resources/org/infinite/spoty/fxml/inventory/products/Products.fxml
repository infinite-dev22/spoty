<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="productsContentPane" stylesheets="@../../../styles/Common.css"
            xmlns="http://javafx.com/javafx/19"
            fx:controller="org.infinite.spoty.views.inventory.products.ProductController">
    <top>
        <AnchorPane styleClass="card" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <MFXTextField fx:id="productsSearchBar" floatMode="BORDER" floatingText="Search Products" prefWidth="300.0"
                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
            <HBox alignment="CENTER_RIGHT" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
                <MFXButton fx:id="productImportBtn" buttonType="RAISED" depthLevel="LEVEL1" text="Import"/>
                <MFXButton buttonType="RAISED" depthLevel="LEVEL1" layoutX="10.0" layoutY="10.0"
                           onMouseClicked="#productCreateBtnClicked" text="Create"/>
            </HBox>
        </AnchorPane>
    </top>
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="20.0"/>
            </BorderPane.margin>
            <MFXTableView fx:id="productsTable" styleClass="card" AnchorPane.bottomAnchor="0.0"
                          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
    </center>
</BorderPane>
