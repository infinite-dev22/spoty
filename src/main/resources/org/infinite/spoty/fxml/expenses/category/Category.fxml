<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTableView?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="categoryContentPane" stylesheets="@../../../styles/Common.css"
            xmlns="http://javafx.com/javafx/19"
            fx:controller="org.infinite.spoty.views.expenses.category.CategoryController">
    <top>
        <AnchorPane styleClass="card" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <MFXTextField fx:id="categoryExpenseSearchBar" floatMode="BORDER" floatingText=" Search expense category"
                          prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                          AnchorPane.topAnchor="0.0"/>
            <HBox fx:id="categoryExpenseActionsPane" alignment="CENTER_RIGHT" spacing="20.0"
                  AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <MFXButton fx:id="categoryExpenseImportBtn" buttonType="RAISED" depthLevel="LEVEL1" text="Import"/>
                <MFXButton buttonType="RAISED" depthLevel="LEVEL1" onMouseClicked="#categoryExpenseCreateBtnClicked"
                           text="Create"/>
            </HBox>
        </AnchorPane>
    </top>
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="20.0"/>
            </BorderPane.margin>
            <MFXTableView fx:id="categoryExpenseTable" styleClass="card" AnchorPane.bottomAnchor="0.0"
                          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
    </center>
</BorderPane>
