<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../styles/Common.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.infinite.spoty.controller.requisition.RequisitionController">
    <top>
        <AnchorPane styleClass="card" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <MFXTextField fx:id="requisitionSearchBar" floatMode="BORDER" floatingText=" Search requisition" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
            <HBox fx:id="requisitionActionsPane" alignment="CENTER_RIGHT" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <MFXButton fx:id="requisitionImportBtn" buttonType="RAISED" depthLevel="LEVEL1" text="Import" />
                <MFXButton buttonType="RAISED" depthLevel="LEVEL1" onMouseClicked="#requisitionCreateBtnClicked" text="Create" />
            </HBox>
        </AnchorPane>
    </top>
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="20.0" />
            </BorderPane.margin>
            <MFXTableView fx:id="requisitionsTable" styleClass="card" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
        </AnchorPane>
    </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="40.0" />
   </padding>
</BorderPane>
